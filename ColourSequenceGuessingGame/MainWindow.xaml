<Window x:Class="ColourSequenceGuessingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColourSequenceGuessingGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Black">
    <Grid>
        <ItemsControl x:Name="ItemsControlColours" ItemsSource="{Binding Colours}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1" Columns="5"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="50"
                            Height="80"
                            Margin="5"
                            CornerRadius="5"
                            Background="{Binding}"                            
                            
                            MouseDown="Border_MouseDown"
                            MouseMove="Border_MouseMove"
                            
                            DragEnter="Border_DragEnter"
                            DragLeave="Border_DragLeave"
                            
                            AllowDrop="True"                            
                            Drop="Border_Drop"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
